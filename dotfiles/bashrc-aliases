
# Be safe in interactive mode

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'


# Directory listing helpers

alias ls='LC_COLLATE=C ls -F --color=auto'
alias ll='ls -l'
alias la='ls -a'
alias l='ll -h'


# Multimedia

alias mp='mplayer'
alias mpv='mplayer -fs -heartbeat-cmd "xscreensaver-command -deactivate" -softvol-max 250'


# Miscellaneous

alias rko='R --no-save'
alias man='env LANG=C man'
alias vi='vim'
alias gitdf='git diff'
alias gitdfs='git diff --staged'
alias ssh-add='ssh-add -t 3600'

