
# Be safe in interactive mode

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'


# Directory listing helpers

alias ls='LC_COLLATE=C ls -F --color=auto'
alias ll='ls -l'
alias la='ls -a'
alias l='ll -h'


# Multimedia

alias mp='mplayer'


# Miscellaneous

alias rko='R --no-save'
alias man='env LANG=C man'
alias vi='vim'
